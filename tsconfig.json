{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "lib": ["es2018", "ES2019.Object"],
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true
    },
    "filesGlob": ["src/**/*"],
    "exclude": ["node_modules", "res/**/*", "dist/**/*"]
}
