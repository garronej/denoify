{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2021",
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": false,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["test", "node_modules", "dist/**/*"]
}
